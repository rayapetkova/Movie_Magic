<section id="details-page">

    <div class="main_card">
        <div class="card_left">
            <div class="card_datails">

                <h1>{{ movieDetails.title }}</h1>
                <div class="card-movie">
                    <div class="first-info">
                        <p class="card-genre">Genre: {{ movieDetails.genre }}</p>
                        <p class="card-director">Director: {{ movieDetails.director }}</p>

                    </div>
                    <div class="second-info">

                        <p class="card-year">Year: {{ movieDetails.year }}</p>
                        <p class="card-ranking">Rating: {{ movieDetails.rating }}</p>
                    </div>

                </div>

                <p class="disc">Description: {{ movieDetails.description }}</p>
                <p class="card-category">Category: {{ movieDetails.category }}</p>

                {{#if isCreator}}
                    <a href="/movies/{{ movieDetails.id }}/attach" class="details">Attach</a>
                    <a href="/movies/{{ movieDetails.id }}/edit" class="details">Edit</a>
                    <a href="/movies/{{ movieDetails.id }}/delete" class="details">Delete</a>
                {{/if}}
            </div>
        </div>
        <div class="card_right">
            <img src="{{ movieDetails.imageUrl }}" alt="image">
        </div>
    </div>

    <div class="main-cast-card">
        {{#each movieDetails.casts}}
            <div class="cast-card">
                <div class="card-img">
                    <img src="{{ imageUrl }}" alt="cast">
                </div>
                <div class="cast-info">
                    <h1>{{ name }}</h1>
                    <h3>Age: {{ age }}</h3>
                    <h3>Born: {{ born }}</h3>
                </div>
            </div>
        {{/each}}
    </div>

    <div>.</div>
    <div>.</div>
    <div>.</div>
    <div>.</div>

</section>