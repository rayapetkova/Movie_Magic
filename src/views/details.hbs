<section id="details-page">
    <div class="main_card">
        <div class="card_left">
            <div class="card_datails">

                <h1>{{ movieDetails.title }}</h1>
                <div class="card-movie">
                    <div class="first-info">
                        <p class="card-genre">Genre: {{ movieDetails.genre }}</p>
                        <p class="card-director">Director: {{ movieDetails.director }}</p>

                    </div>
                    <div class="second-info">

                        <p class="card-year">Year: {{ movieDetails.year }}</p>
                        <p class="card-ranking">Rating: {{ movieDetails.rating }}</p>
                    </div>

                </div>

                <p class="disc">Description: {{ movieDetails.description }}</p>
                <p class="card-category">Category: {{ movieDetails.category }}</p>
            </div>
        </div>
        <div class="card_right">
            <img src="{{ movieDetails.imageUrl }}" alt="image">
        </div>
    </div>

</section>